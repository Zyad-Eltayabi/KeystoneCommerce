@model EditProductViewModel
@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit Product : @Model.Title</h1>

<div class="container my-5">
    <div class="row g-4">
        <!-- Product Edit Form -->
        <div class="col-lg-7">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Edit Product</h5>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="card-body">
                    <form id="form" asp-controller="Products" asp-action="Edit" method="post" enctype="multipart/form-data">

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImageName" />
                        <input type="hidden" name="DeletedImagesJson" id="DeletedImagesJson"/>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold d-flex align-items-center">
                                <i class="bi bi-tag me-2 text-primary mr-1"></i>
                                Product Title
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-pencil-square text-muted"></i>
                                </span>
                                <input asp-for="Title" class="form-control border-start-0 ps-2" placeholder="Enter product title" />
                            </div>
                            <span asp-validation-for="Title" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Summary" class="form-label fw-bold d-flex align-items-center">
                                <i class="bi bi-file-text me-2 text-primary mr-1"></i>
                                Summary
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-pencil-square text-muted"></i>
                                </span>
                                <textarea asp-for="Summary" class="form-control border-start-0 ps-2" rows="2" placeholder="Enter product summary"></textarea>
                            </div>
                            <span asp-validation-for="Summary" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold d-flex align-items-center">
                                <i class="bi bi-card-text me-2 text-primary mr-1"></i>
                                Description
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-pencil-square text-muted"></i>
                                </span>
                                <textarea asp-for="Description" class="form-control border-start-0 ps-2" rows="4" placeholder="Enter product description"></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Price" class="form-label fw-bold d-flex align-items-center">
                                    <i class="bi bi-currency-dollar me-2 text-primary  mr-1"></i>
                                    Price
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-cash text-muted"></i>
                                    </span>
                                    <input asp-for="Price" class="form-control border-start-0 ps-2" type="number" step="0.01" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small mt-1 d-block"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Discount" class="form-label fw-bold d-flex align-items-center mr-1">
                                    <i class="bi bi-percent me-2 text-primary"></i>
                                    Discount
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-calculator text-muted"></i>
                                    </span>
                                    <input asp-for="Discount" class="form-control border-start-0 ps-2" type="number" step="0.01" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Discount" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="QTY" class="form-label fw-bold d-flex align-items-center">
                                    <i class="bi bi-box-seam me-2 text-primary  mr-1"></i>
                                    Quantity
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-123 text-muted"></i>
                                    </span>
                                    <input asp-for="QTY" class="form-control border-start-0 ps-2" type="number" placeholder="0" />
                                </div>
                                <span asp-validation-for="QTY" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Tags" class="form-label fw-bold d-flex align-items-center">
                                <i class="bi bi-tags me-2 text-primary  mr-1"></i>
                                Tags
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-pencil-square text-muted"></i>
                                </span>
                                <input asp-for="Tags" class="form-control border-start-0 ps-2" placeholder="e.g. shirt, cotton, men" />
                            </div>
                            <span asp-validation-for="Tags" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label for="fileUpload" class="form-label fw-semibold text-secondary">
                                Change Main Image
                            </label>
                            <div class="position-relative">
                                <input asp-for="MainImage" class="fileUpload form-control d-none" type="file" id="main-image">
                                <label for="main-image"
                                       class="form-control border-2 border-primary text-center py-4 rounded-3 bg-light fw-semibold text-muted shadow-sm upload-label">
                                    <i class="bi bi-cloud-arrow-up fs-3 text-primary d-block mb-2"></i>
                                    <span class="upload-text">Click to choose files</span>
                                </label>
                            </div>
                            <span asp-validation-for="MainImage" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="fileUpload" class="form-label fw-semibold text-secondary">
                                Add New Galleries
                            </label>
                            <div class="position-relative">
                                <input asp-for="Galleries" class="fileUpload form-control d-none" type="file" id="gallaries" multiple>
                                <label for="gallaries"
                                       class="form-control border-2 border-primary text-center py-4 rounded-3 bg-light fw-semibold text-muted shadow-sm upload-label">
                                    <i class="bi bi-cloud-arrow-up fs-3 text-primary d-block mb-2"></i>
                                    <span class="upload-text">Click to choose files</span>
                                </label>
                            </div>
                            <span asp-validation-for="Galleries" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="mt-3">
                                <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
                            </div>
                            <div class="form-group mt-3">
                                <input type="submit" value="Save Changes" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Product Images Section -->
        <div class="col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Product Images</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h6 class="fw-bold">Main Image</h6>
                        <img src="@FilePaths.WebProductPath/@Model.ImageName" alt="Main Image"
                             class="img-fluid rounded shadow-sm border"
                             style="max-height: 250px; object-fit: cover;" />
                    </div>

                    @if (Model.GallaryImageNames != null && Model.GallaryImageNames.Any())
                    {
                        <h6 class="fw-bold mb-3 text-center">Gallery</h6>
                        <div id="galleryPreview" class="row g-2 g-md-3">
                            @foreach (var img in Model.GallaryImageNames)
                            {
                                <div class="col-6 col-sm-4 col-md-6 col-lg-6">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="ratio ratio-1x1">
                                            <img src="@FilePaths.WebProductPath/@img"
                                                 alt="Gallery Image"
                                                 class="card-img-top rounded w-100 h-100"
                                                 style="object-fit: cover;" />
                                        </div>
                                        <div class="card-body p-2 text-center">
                                            <button onclick="removeGallary(this,'@img')" type="button"
                                                    class="btn btn-sm btn-outline-danger px-2 px-md-3"
                                                    title="Remove">
                                                <i class="bi bi-trash"></i> <span class="d-none d-sm-inline">Delete</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mt-3">No gallery images available.</p>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="/assets/js/Scripts/product-edit.js"></script>
    <script src="/assets/js/Scripts/file-upload.js"></script>
}

