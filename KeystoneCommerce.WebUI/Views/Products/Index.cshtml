@model PaginatedResult<ProductDto>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Products";
}

<partial name="_ConfirmModalPartial"/>

<div
    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="mb-4">Products</h1>
    <a class="btn btn-success text-decoration-none"
       asp-controller="Products"
       asp-action="Create">
        New Product
    </a>
</div>

@* Page Size Selector *@
@await Html.PartialAsync("_PageSizeSelectorPartial", model: @Model.PageSize)

@* create search form *@
<form method="get" asp-action="Index" 
      class="d-flex justify-content-end align-items-center flex-wrap my-3">

    <div class="input-group input-group-md" style="width: auto">
        <select asp-for="SearchBy" class="form-select m-1" style="border-radius:20px; min-width: 150px;">>
            <option value="Id">Id</option>
            <option value="Title">Title</option>
            <option value="Description">Description</option>
            <option value="Tags">Tags</option>
            <option value="Summary">Summary</option>
            <option value="Price">Price</option>
            <option value="Discount">Discount</option>
            <option value="QTY">QTY</option>
        </select>

        <input asp-for="SearchValue" type="text" class="form-control me-1 rounded-pill m-1" 
               placeholder="Search" style="min-width: 200px;">

        <button type="submit" class="btn btn-outline-success rounded-pill m-1">
            Search
        </button>
    </div>

    <!-- hidden fields -->
    <input type="hidden" name="pageNumber" value="1" />
    <input type="hidden" name="pageSize" value="@Model.PageSize" />
    <input type="hidden" name="sortBy" value="@Model.SortBy" />
    <input type="hidden" name="sortOrder" value="@Model.SortOrder" />
</form>


<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-light">
        <tr>
            <th>
                <a asp-route-pageNumber="@Model.PageNumber"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-sortBy="Id"
                   asp-route-sortOrder="@((Model.SortOrder == "Asc" || Model.SortOrder == "") ? "desc" : "Asc")"
                   asp-route-searchBy="@Model.SearchBy"
                   asp-route-searchValue="@Model.SearchValue"
                   asp-action="Index"
                   class="link-underline text-decoration-none">ID
                </a>
            </th>
            <th>Title</th>
            <th>Summary</th>
            <th>Description</th>
            <th>Price</th>
            <th>Discount</th>
            <th>QTY</th>
            <th>Tags</th>
            <th>Image</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model.Items)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Title</td>
                <td>@product.Summary</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.Discount</td>
                <td>@product.QTY</td>
                <td>@product.Tags</td>
                <td>
                    <img src="@FilePaths.WebProductPath/@product.ImageName" alt="@product.Title"
                         style="max-width: 100px; object-fit: cover"/>
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@product.Id"
                           class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@product.Id"
                           class="btn btn-info btn-sm">View</a>
                        <a data-product-id="@product.Id"
                           class="btn btn-danger btn-sm delete-btn" data-bs-toggle="modal"
                           data-bs-target="#confirmModal">Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("_PageNavigatorPartial");

@section Styles {
    <link rel="stylesheet" href="/assets/css/styles/modal.css">
}

@section Scripts {
    @{
        <script defer src="/assets/js/axios/axios.min.js"></script>
        <script defer src="/assets/js/scripts/product-index.js"></script>
    }
}