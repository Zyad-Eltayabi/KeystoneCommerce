@model ProductViewModel

@{
    ViewBag.Title = @Model.Title;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="row g-4">
        <!-- Product Gallery -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <!-- Main Image -->
                    <div class="ratio ratio-1x1 mb-3">
                        <img src="@FilePaths.WebProductPath/@Model.ImageName" 
                             alt="@Model.Title" 
                             id="mainImage" 
                             class="img-fluid rounded">
                    </div>
                    
                    <!-- Gallery Thumbnails -->
                    <div class="row g-2 px-3 pb-3">
                        <div class="col-3">
                            <img src="@FilePaths.WebProductPath/@Model.ImageName" 
                                 alt="@Model.Title" 
                                 class="img-thumbnail thumbnail active" 
                                 style="cursor: pointer;"
                                 onclick="changeImage('@FilePaths.WebProductPath/@Model.ImageName', this)">
                        </div>
                        @if (Model.GalleryImageNames != null && Model.GalleryImageNames.Any())
                        {
                            foreach (var image in Model.GalleryImageNames)
                            {
                                <div class="col-3">
                                    <img src="@FilePaths.WebProductPath/@image" 
                                         alt="@Model.Title" 
                                         class="img-thumbnail thumbnail" 
                                         style="cursor: pointer;"
                                         onclick="changeImage('@FilePaths.WebProductPath/@image', this)">
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

       <!-- Product Info -->
<div class="col-lg-6">
    <div class="card border-0 shadow-sm h-100">
        <div class="card-body p-4">
            <!-- Product Title -->
            <div class="mb-4">
                <h1 class="h2 fw-bold text-dark mb-2">@Model.Title</h1>
                <p class="text-muted fs-6 mb-0">@Model.Summary</p>
            </div>

            <hr class="my-4">

            <!-- Price Section -->
            <div class="mb-4">
                <div class="d-flex align-items-center mb-2">
                    <i class="bi bi-tag-fill text-primary me-2 fs-5 mr-2"></i>
                    <h5 class="fw-semibold mb-0 text-dark">Price</h5>
                </div>
                <div class="d-flex align-items-center gap-3 ms-4">
                    @if (Model.Discount.HasValue && Model.Discount > 0)
                    {
                        <span class="text-danger fw-bold fs-3 mr-2">$@((Model.Price - Model.Discount.Value).ToString("F2"))</span>
                        <span class="text-decoration-line-through text-muted fs-5 mr-2">$@Model.Price</span>
                        <span class="badge bg-danger fs-6 px-3 py-2">
                            <i class="bi bi-percent me-1"></i>@((Model.Discount.Value / Model.Price * 100).ToString("F0"))% OFF
                        </span>
                    }
                    else
                    {
                        <span class="text-danger fw-bold fs-3">$@Model.Price</span>
                    }
                </div>
            </div>

            <hr class="my-4">

            <!-- Stock Section -->
            <div class="mb-4">
                <div class="d-flex align-items-center mb-2">
                    <i class="bi bi-box-seam text-info me-2 fs-5 mr-2"></i>
                    <h5 class="fw-semibold mb-0 text-dark">Availability</h5>
                </div>
                <div class="ms-4">
                    @if (Model.QTY > 0)
                    {
                        <span class="badge bg-success-subtle text-success fs-6 px-3 py-2">
                            @Model.QTY Units Available <i class="bi bi-check-circle-fill me-1"></i>
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger-subtle text-danger fs-6 px-3 py-2">
                            <i class="bi bi-x-circle-fill me-1"></i>Out of Stock
                        </span>
                    }
                </div>
            </div>

            <!-- Tags Section -->
            @if (!string.IsNullOrEmpty(Model.Tags))
            {
                <hr class="my-4">
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-tags-fill text-warning me-2 fs-5 mr-2"></i>
                        <h5 class="fw-semibold mb-0 text-dark">Product Tags</h5>
                    </div>
                    <div class="ms-4 d-flex flex-wrap gap-2">
                        @foreach (var tag in Model.Tags.Split(','))
                        {
                            <span class="badge bg-light text-dark border px-3 py-2 fs-6">
                                <i class="bi bi-hash"></i>@tag.Trim()
                            </span>
                        }
                    </div>
                </div>
            }

            <hr class="my-4">

            <!-- Description Section -->
            <div class="mb-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-file-text-fill text-secondary me-2 fs-5 mr-2"></i>
                    <h5 class="fw-semibold mb-0 text-dark">Product Description</h5>
                </div>
                <div class="ms-4">
                    <p class="text-secondary mb-0 lh-lg">@Model.Description</p>
                </div>
            </div>

            <hr class="my-4">
        </div>
    </div>
</div>

    </div>
</div>

<style>
    .thumbnail {
        transition: all 0.3s ease;
        opacity: 0.6;
    }
    
    .thumbnail:hover,
    .thumbnail.active {
        opacity: 1;
        border-color: #0d6efd !important;
        border-width: 2px !important;
    }
</style>

<script>
    function changeImage(imageSrc, element) {
        document.getElementById('mainImage').src = imageSrc;
        
        document.querySelectorAll('.thumbnail').forEach(thumb => {
            thumb.classList.remove('active');
        });
        
        element.classList.add('active');
    }
</script>
