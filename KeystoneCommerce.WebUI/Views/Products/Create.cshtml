@model CreateProductViewModel

@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create New Product</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Add" enctype="multipart/form-data" asp-controller="products">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="Title" class="control-label">Product Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Summary" class="control-label"></label>
                <input asp-for="Summary" class="form-control" />
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Price" class="control-label"></label>
                <input type="number" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Discount" class="control-label"></label>
                <input type="number" asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="QTY" class="control-label">Quantity</label>
                <input type ="number" asp-for="QTY" class="form-control" />
                <span asp-validation-for="QTY" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="MainImage" class="control-label">Main Image</label>
                <input asp-for="MainImage" class="form-control" />
                <span asp-validation-for="MainImage" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Gallaries" class="control-label"></label>
                <input multiple asp-for="Gallaries" class="form-control" />
                <span class="d-block">The maximum numbers of images is @FileSizes.MaxNumberOfGalleryImages images.</span>
                <span asp-validation-for="Gallaries" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <div class="mt-3">
                    <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
