@model List<ProductCartViewModel>

<div class="cart_gallery">
    <div class="cart_close">
        <div class="cart_text">
            <h3>cart</h3>
        </div>
        <div class="mini_cart_close">
            <a onclick="closeMiniCart()"><i class="icon-close icons"></i></a>
        </div>
    </div>
</div>

@if (Model is not null && Model.Any())
{
    @foreach (var item in Model)
    {
        <div class="cart_item">
            <div class="cart_img">
                <a href="@Url.Action("Index", "ProductDetails", new { id = item.Id })">
                    <img src="@FilePaths.WebProductPath/@item.ImageName" alt="">
                </a>
            </div>
            <div class="cart_info">
                <a href="@Url.Action("Index", "ProductDetails", new { id = item.Id })">@item.Title</a>
                <p>@item.Count x <span> $@item.Price.ToString("F2") </span></p>
            </div>
            <div class="cart_remove">
                <a onclick="updateCart(@item.Id,0)"><i class="icon-close icons"></i></a>
            </div>
        </div>
    }
    <div class="mini_cart_table">
        <div class="cart_table_border">
            <div class="cart_total mt-10">
                <span>total:</span>
                <span class="price">$ @Model.Sum(x => x.RowSumPrice)</span>
            </div>
        </div>
    </div>
}
<div class="mini_cart_footer">
    <div class="cart_button">
        <a asp-action="Index" asp-controller="Cart"><i class="fa fa-shopping-cart"></i> View cart</a>
    </div>
    <div class="cart_button">
        <a asp-action="Index" asp-controller="Checkout"><i class="fa fa-sign-in"></i> Checkout</a>
    </div>
</div>