<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="~/assets/img/logo/Logo.ico">
    <title>@ViewData["Title"] - Admin Dashboard</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="~/assets/css/vendor/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    @*
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
     *@
    <link rel="stylesheet" href="/assets/css/bootstrap-icons/font/bootstrap-icons.min.css">

     @*
     Custom CSS
    *@
    <link href="~/assets/css/styles/dashboard-layout.css" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Mobile Toggle Button -->
    <button class="btn btn-primary mobile-toggle" type="button" id="sidebarToggle">
        <i class="bi bi-list"></i>
    </button>
    
    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-brand">
            <h4><i class="bi bi-shop text-primary"></i> Admin Panel</h4>
        </div>
        
        <nav class="sidebar-nav">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="/Admin/Dashboard">
                        <i class="bi bi-speedometer2"></i>
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Banners">
                        <i class="bi bi-image-alt"></i>
                        Banners
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Products">
                        <i class="bi bi-tags"></i>
                        Products
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Orders">
                        <i class="bi bi-cart-check"></i>
                        Orders
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Payments">
                        <i class="bi bi-credit-card"></i>
                        Payments
                    </a>
                </li>
                <li class="nav-item">
                    <hr class="my-3 mx-3" style="border-color: rgba(255,255,255,0.2);">
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Profile">
                        <i class="bi bi-person"></i>
                        Profile
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Logout">
                        <i class="bi bi-box-arrow-right"></i>
                        Logout
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/assets/js/vendor/jquery-3.4.1.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Custom JS -->
    <script src="~/assets/js/scripts/dashboard.js"></script>
</body>
</html>