@section Scripts {
    <script>
        window.addEventListener("DOMContentLoaded", () => {
            const topProducts = document.querySelectorAll(".top-product");
            const discountRegex = /(100|[1-9][0-9]?)\s*%/g;

            for (let i = 0; i < topProducts.length; i++) {
                const titleElement = topProducts[i].querySelector(".sale-title");
                if (!titleElement) continue;

                const title = titleElement.textContent.trim();

                if (discountRegex.test(title)) {
                    titleElement.innerHTML = title.replace(discountRegex, '<strong style="color: #ff2f2f;">$&</strong> <br>');
                }
            }
        });


    </script>
}
