@model LoginViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_SignLayout.cshtml";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h2>Sign In</h2>
            <p>Enter your credentials to access your account</p>
        </div>

        <form class="login-form" id="loginForm" asp-action="Login" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold d-flex align-items-center">
                    <i class="bi bi-envelope-at-fill mx-1"></i>
                    Email
                </label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="bi bi-pencil-square text-muted"></i>
                    </span>
                    <input asp-for="Email" class="form-control border-start-0 ps-2" placeholder="Enter your email" />
                </div>
                <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold d-flex align-items-center">
                    <i class="bi bi-key-fill mx-1"></i>
                    Password
                </label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="bi bi-pencil-square text-muted"></i>
                    </span>
                    <input type="password" asp-for="Password" class="form-control border-start-0 ps-2" placeholder="Enter your password" />
                </div>
                <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
            </div>

            <div class="mb-3 d-flex justify-content-between align-items-center" style="font-size:14px">
                <div class="form-check d-flex align-items-center">
                    <input asp-for="RememberMe" class="form-check-input me-2 mr-1" type="checkbox" id="rememberMe" />
                    <label class="form-check-label fw-normal" asp-for="RememberMe">
                        Remember me
                    </label>
                </div>
                <div>
                    <a asp-action="ForgotPassword" asp-controller="Account" class="text-decoration-none text-primary">
                        Forgot Password?
                    </a>
                </div>
            </div>

            <div class="form-group mt-3 mb-1 w-100">
                <input type="submit" value="Sign In" class="btn btn-primary w-100" />
            </div>
        </form>

        <div class="signup-link text-center " style="font-size:14px">
            <p>Don't have an account? <a asp-action="Register" asp-controller="Account" class="text-decoration-none">Register</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="/assets/sweetalert2/sweetalert2.all.min.js"></script>
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
              Swal.fire({
              title: "Good job!",
              text: '@TempData["SuccessMessage"]',
              icon: "success",
              timer: 3000
            });
        </script>
    }
}