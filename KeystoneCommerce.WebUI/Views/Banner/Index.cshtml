@model List<BannerViewModel>

@{
    ViewBag.Title = "Banners";
    Layout = "_AdminLayout";
}

<div
    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="mb-4">Banners</h1>
    <a class="btn btn-success text-decoration-none" asp-action="Create" asp-controller="Banner">New
        Banner</a>
</div>

<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white border-0" style="padding: 1.5rem 1.5rem 0.5rem;border-bottom: none;border-radius: 1rem 1rem 0 0;
    background: linear-gradient(to right, #28a745, #28a745);">
                <h5 class="modal-title" id="successModalLabel">
                    <i class="bi bi-check-circle-fill me-2"></i> Success
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-3">
                    <i class="bi bi-check-circle-fill text-success display-4"></i>
                </div>
                <h5 class="mb-2" id="successMessage">Banner Deleted Successfully</h5>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-success w-100" data-bs-dismiss="modal">
                    <i class="bi bi-check-lg me-1"></i>Continue
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <i class="bi bi-exclamation-triangle-fill warning-icon"></i>
                <p class="mb-0">Are you sure you want to delete this item?<br>This action cannot be
                    undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-lg"></i> Cancel
                </button>
                <button type="button" class="btn btn-danger" onclick="confirmAction()">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>


<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-light">
        <tr>
            <th>Title</th>
            <th>Sub Title</th>
            <th>Image</th>
            <th>Link</th>
            <th>Priority</th>
            <th>Banner Type</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var banner in Model)
        {
            <tr>
                <td>@banner.Title</td>
                <td>@banner.SubTitle</td>
                <td><img src="@FilePaths.WebBannerPath/@banner.ImageName" alt="@banner.Title"
                         style="max-width: 100px; object-fit: cover"/></td>
                <td>@banner.Link</td>
                <td>@banner.Priority</td>
                <td>@banner.BannerType</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Update" asp-route-id="@banner.Id"
                           class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="GetById" asp-route-id="@banner.Id"
                           class="btn btn-info btn-sm">View</a>
                        <a data-banner-id="@banner.Id"
                           class="btn btn-danger btn-sm delete-btn" data-bs-toggle="modal"
                           data-bs-target="#confirmModal">Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="/assets/css/styles/banner.css">

@section Scripts {
    @{
        <script src="/assets/js/axios/axios.min.js"></script>
        <script src="/assets/js/scripts/banner-index.js"></script>
    }
}