@model List<BannerViewModel>

@{
    ViewBag.Title = "Banners";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="mb-4">Banners</h1>
    <a class="btn btn-success text-decoration-none" asp-action="Create" asp-controller="Banner">New Banner</a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-light">
        <tr>
            <th>Title</th>
            <th>Sub Title</th>
            <th>Image</th>
            <th>Link</th>
            <th>Priority</th>
            <th>Banner Type</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var banner in Model)
        {
            <tr>
                <td>@banner.Title</td>
                <td>@banner.SubTitle</td>
                <td><img src="@FilePaths.WebBannerPath/@banner.ImageName" alt="@banner.Title"
                         style="max-width: 100px; object-fit: cover"/></td>
                <td>@banner.Link</td>
                <td>@banner.Priority</td>
                <td>@banner.BannerType</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Update" asp-route-id="@banner.Id"
                           class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="GetById" asp-route-id="@banner.Id"
                           class="btn btn-info btn-sm">View</a>
                        <a asp-action="Delete" asp-route-id="@banner.Id"
                           class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>