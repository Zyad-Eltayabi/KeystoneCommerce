<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Banner Details</h5>
        </div>
        <div class="card-body">
            <div class="row align-items-center">
                <!-- Image Column -->
                <div class="col-md-4 text-center mb-3 mb-md-0">
                    <img src="@FilePaths.WebBannerPath/@Model.ImageName" 
                         class="img-fluid rounded" 
                         alt="@Model.Title"
                         style="max-height: 250px; object-fit: cover;">
                </div>
                
                <!-- Details Column -->
                <div class="col-md-8">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Subtitle</dt>
                        <dd class="col-sm-9">@Model.SubTitle</dd>

                        <dt class="col-sm-3">Link</dt>
                        <dd class="col-sm-9">
                            <a href="@Model.Link" target="_blank" class="text-decoration-none">
                                @Model.Link
                            </a>
                        </dd>

                        <dt class="col-sm-3">Priority</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.Priority</span>
                        </dd>

                        <dt class="col-sm-3">Banner Type</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-secondary">@Model.BannerType</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

