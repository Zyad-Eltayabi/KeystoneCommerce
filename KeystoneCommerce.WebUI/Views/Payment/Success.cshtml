@model KeystoneCommerce.WebUI.ViewModels.Payment.PaymentSuccessViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Payment Successful";
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area breadcrumbs_other" style="margin-top: 100px">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content text-center">
                    <ul>
                        <li><a asp-action="Index" asp-controller="Home">home</a></li>
                        <li><a asp-action="Index" asp-controller="Shop">shop</a></li>
                    </ul>
                    <h3>Payment Success</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->

<!--payment success section start-->
<div class="payment_success_section" style="padding-bottom:100px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="payment_success_content text-center" style="background: #fff; padding: 60px 40px; border-radius: 8px; box-shadow: 0 0 30px rgba(0,0,0,0.08);">
                    <div class="success_icon" style="margin-bottom: 30px;">
                        <i class="icon-check" style="font-size: 80px; color: #28a745; background: #e8f5e9; width: 140px; height: 140px; line-height: 140px; border-radius: 50%; display: inline-block;"></i>
                    </div>
                    <h2 style="font-size: 32px; font-weight: 600; color: #333; margin-bottom: 20px;">Payment Successful!</h2>
                    <p style="font-size: 16px; color: #666; margin-bottom: 30px;">
                        Thank you for your purchase. Your order has been confirmed and is being processed.
                    </p>
                    
                    <div class="order_details" style="background: #f8f9fa; padding: 30px; border-radius: 6px; margin-bottom: 30px;">
                        <div class="order_number" style="margin-bottom: 15px;">
                            <h4 style="font-size: 16px; color: #666; font-weight: 400; margin-bottom: 8px;">Order Number</h4>
                            <h3 style="font-size: 28px; font-weight: 600; color: #333; letter-spacing: 1px;">@Model.OrderNumber</h3>
                        </div>
                        <p style="font-size: 14px; color: #666; margin-bottom: 0;">
                            A confirmation email has been sent to your email address with order details.
                        </p>
                    </div>

                    @* <div class="shipping_info_section" style="background: #fff3cd; border-left: 4px solid #ffc107; padding: 20px; border-radius: 4px; margin-bottom: 30px; text-align: left;">
                        <div class="d-flex align-items-start">
                            <i class="icon-info" style="font-size: 24px; color: #ffc107; margin-right: 15px; margin-top: 2px;"></i>
                            <div>
                                <h5 style="font-size: 16px; font-weight: 600; color: #333; margin-bottom: 8px;">What's Next?</h5>
                                <ul style="list-style: none; padding: 0; margin: 0; font-size: 14px; color: #666;">
                                    <li style="margin-bottom: 6px;"><i class="icon-check" style="color: #28a745; margin-right: 8px;"></i>We're preparing your order for shipment</li>
                                    <li style="margin-bottom: 6px;"><i class="icon-check" style="color: #28a745; margin-right: 8px;"></i>You'll receive a tracking number once shipped</li>
                                    <li style="margin-bottom: 0;"><i class="icon-check" style="color: #28a745; margin-right: 8px;"></i>Estimated delivery: 3-7 business days</li>
                                </ul>
                            </div>
                        </div>
                    </div> *@

                    <div class="action_buttons d-flex justify-content-center flex-wrap" style="gap: 15px;">
                        <a asp-action="Index" asp-controller="Shop" class="btn btn-primary" style="font-size: 14px; font-weight: 500; text-transform: uppercase; letter-spacing: 0.5px;">
                            Continue Shopping
                        </a>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary" style="padding: 12px 35px; font-size: 14px; font-weight: 500; text-transform: uppercase; letter-spacing: 0.5px; background: white; border: 2px solid;">
                            Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--payment success section end-->

@section Styles {
    <style>
        .btn-outline-primary {
            color: #333;
            border-color: #ddd;
        }
        .btn-outline-primary:hover {
            background: #f8f9fa;
            border-color: #333;
            color: #333;
        }
        .payment_success_section {
            min-height: 60vh;
        }
    </style>
}
